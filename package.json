{
  "name": "@electron/archaeologist",
  "private": true,
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "dependencies": {
    "actions-toolkit": "^2.0.0",
    "diff": "^3.5.0",
    "fs-extra": "^7.0.1",
    "simple-git": "^1.110.0"
  },
  "devDependencies": {
    "@types/diff": "^3.5.1",
    "@types/fs-extra": "^5.0.5",
    "@types/node": "^11.13.8",
    "@types/signale": "^1.2.1",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "build": "tsc",
    "lint": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
